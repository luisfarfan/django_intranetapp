{
  "name": "ts-webpack-hmr",
  "version": "1.0.0",
  "description": "Example for typescript and webpack with hot module replacement",
  "scripts": {
    "build-dev-server": "webpack-dev-server -w --hot --inline --config webpack.config.js --host 0.0.0.0 --port 81",
    "postinstall": "typings install --save --global dt~webpack-env",
    "build": "babel static/src --watch --out-dir static/dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/krausest/ts-webpack-hmr"
  },
  "keywords": [
    "webpack",
    "hot module replacement",
    "hmr",
    "typescript",
    ""
  ],
  "license": "Apache-2.0",
  "dependencies": {},
  "devDependencies": {
    "awesome-typescript-loader": "^0.17.0",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-amd": "^6.22.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-latest": "^6.22.0",
    "babel-watch": "^2.0.5",
    "typescript": "^1.8.10",
    "typings": "^1.0.4",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
